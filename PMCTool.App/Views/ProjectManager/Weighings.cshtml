@model PMCTool.Models.Environment.Project

<script type="text/javascript" src="~/js/plugins/dhtmlxgantt.js" asp-append-version="true"></script>

@Html.HiddenFor(m => m.ProjectID)

@Html.Hidden("Yes", Localizer["Yes"].ToString().ToUpper())
@Html.Hidden("No", Localizer["No"].ToString().ToUpper())
@Html.Hidden("VerifyNumericField", Localizer["VerifyNumericField"])
@Html.Hidden("Equal100", Localizer["5045"].ToString())
<style>
    label {
        display: inline-block;
        text-align: left;
    }


</style>

<div class="content">
    <div class="container-fluid">
        <div hidden="hidden">
            <div id="gantt" style="width: 100%; height: 100vh;"></div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-10 pt-4">
                                <small class="font-weight-normal bold">@Localizer["Project"]</small>
                                <h4 class="media align-items-center font-weight-bold  mb-0 mt-0">
                                    <span class="txt-blue"> @Model.Name.ToUpper()	</span>
                                </h4>
                            </div>
                            <div class="col-md-2 text-right pt-2">
                                <a href="/ProjectManager/ProjectWeighing" class="btn btn-sm btn-default  btn-outline"><i class="fas fa-arrow-left"></i> @Localizer["Back"]</a>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>@Localizer["Activity"]</label>
                                    @Html.DropDownList("TaskID", new SelectList(ViewBag.Activities, "Key", "Value"), new { @id = "TaskID", @class = "form-control", @style = "", @required = "required" })
                                </div>
                            </div>
                            <div class="col-md-6 pt-4 text-right">
                                <a href="#" onclick="setDetaultWeights(); return false;" data-toggle="modal" class="btn btn-default">@Localizer["DefaultWeights"]</a>
                                <a href="#" onclick="updateWeights(); return false;" data-toggle="modal" class="btn btn-default">@Localizer["Save"]</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card data-tables">
                                    <div class="card-body table-striped table-no-bordered table-hover dataTable dtr-inline table-full-width">
                                        <div class="toolbar">
                                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                                        </div>
                                        <div class="fresh-datatables">
                                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th></th>
                                                        <th>@Localizer["Wbs"]</th>
                                                        <th>@Localizer["Description"]</th>
                                                        <th>@Localizer["StartDate"]</th>
                                                        <th>@Localizer["EndDate"]</th>
                                                        <th>@Localizer["Duration"]</th>
                                                        <th>@Localizer["Milestone"]</th>
                                                        <th>@Localizer["Weighing"]</th>
                                                        <th>@Localizer["WeighingCalculated"]</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tfoot>
                                                    <tr>
                                                        <th></th>
                                                        <th></th>
                                                        <th>@Localizer["Wbs"]</th>
                                                        <th>@Localizer["Description"]</th>
                                                        <th>@Localizer["StartDate"]</th>
                                                        <th>@Localizer["EndDate"]</th>
                                                        <th>@Localizer["Duration"]</th>
                                                        <th>@Localizer["Milestone"]</th>
                                                        <th>@Localizer["Weighing"]</th>
                                                        <th>@Localizer["WeighingCalculated"]</th>
                                                        <th></th>
                                                    </tr>
                                                </tfoot>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/_DataTablesScriptsPartial.cshtml")

@section Scripts {
    <script type="text/javascript" src="~/js/core/vProjectManagerWeighings.js" asp-append-version="true"></script>
}