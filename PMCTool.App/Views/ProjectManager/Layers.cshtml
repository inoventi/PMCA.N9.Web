@model PMCTool.Models.Environment.ProjectLayer

@Html.HiddenFor(m => m.ProjectID)

@Html.Hidden("AreYouSureDeleteLayers", Localizer["AreYouSureDeleteLayers"].ToString())
@Html.Hidden("Cancel", Localizer["Cancel"].ToString())
@Html.Hidden("Accept", Localizer["Accept"].ToString())
@Html.Hidden("Active", Localizer["Active"].ToString())
@Html.Hidden("Inactive", Localizer["Inactive"].ToString())
@Html.Hidden("Edit", Localizer["Edit"].ToString())
@Html.Hidden("Delete", Localizer["Delete"].ToString())
@Html.Hidden("SubLayers", Localizer["SubLayers"].ToString())
@Html.Hidden("Yes", Localizer["Yes"].ToString().ToUpper())

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-10 pt-4">
                                <small class="font-weight-normal bold">@Localizer["Project"]</small>
                                <h4 class="media align-items-center font-weight-bold  mb-0 mt-0">
                                    <span class="txt-blue"> @Model.ProjectName.ToUpper()	</span>
                                </h4>
                            </div>
                            <div class="col-md-2 text-right pt-2">
                                <a href="/ProjectManager/Projects" class="btn btn-sm btn-default  btn-outline"><i class="fas fa-arrow-left"></i> @Localizer["Back"]</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <a href="#" onclick="sort(); return false;" class="btn btn-outline"><i class="fas fa-sort-amount-down"></i> @Localizer["OrderLayers"]</a>

                                <a href="#" onclick="newEntry(); return false;" data-toggle="modal" class="btn btn-default"><i class="fas fa-plus-circle"></i> @Localizer["CreateLayer"]</a>
                            </div>
                            <div class="col-md-12">
                                <div class="card data-tables">
                                    <div class="card-body table-striped table-no-bordered table-hover dataTable dtr-inline table-full-width">
                                        <div class="toolbar">
                                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                                        </div>
                                        <div class="fresh-datatables">
                                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th>@Localizer["Name"]</th>
                                                        <th>@Localizer["Description"]</th>
                                                        <th>Visible</th>
                                                        <th class="disabled-sorting">@Localizer["Actions"]</th>
                                                    </tr>
                                                </thead>
                                                <tfoot>
                                                    <tr>
                                                        <th></th>
                                                        <th>@Localizer["Name"]</th>
                                                        <th>@Localizer["Description"]</th>
                                                        <th>Visible</th>
                                                        <th class="disabled-sorting">@Localizer["Actions"]</th>
                                                    </tr>
                                                </tfoot>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card horizontal-form" style="border:none;">
                    <div class="card-header ">
                        <h5 class="card-title">@Localizer["Layer"]</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="card-body ">
                        <form id="frmMain">
                            @Html.HiddenFor(m => m.ProjectID)
                            @Html.HiddenFor(m => m.ProjectLayerID)
                            @Html.HiddenFor(m => m.ParentID)
                            @Html.HiddenFor(m => m.Row)
                            @Html.HiddenFor(m => m.Cell)
                            <div class="form-group">
                                <label>@Localizer["Name"]</label><star class="star">*</star>
                                @Html.TextBoxFor(m => m.Name, new { @id = "Name", @class = "form-control", @style = "", @required = "required", @maxlength = 300 })
                            </div>
                            <div class="form-group">
                                <label>@Localizer["Description"]</label>
                                @Html.TextAreaFor(m => m.Description, new { @id = "Description", @class = "form-control", @style = "", @maxlength = 500 })
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        @Html.CheckBoxFor(m => m.IsActive, new { @id = "IsActive", @class = "form-check-input" })
                                        <span class="form-check-sign"></span>
                                        Visible
                                    </label>
                                </div>
                            </div>
                            <div class="card-footer text-right">
                                <button type="button" class="btn btn-info btn-fill" data-dismiss="modal">@Localizer["Cancel"]</button>
                                <button type="button" id="btnUpdate" onclick="update('ProjectLayers'); return false;" class="btn btn-default btn-fill">@Localizer["Update"]</button>
                                <button type="button" id="btnCreate" onclick="create('ProjectLayers'); return false;" class="btn btn-default btn-fill">@Localizer["Create"]</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="sortModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title bold txt-blue f600"> @Localizer["OrderParentLayer"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body ">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header ">
                                @*<div class="card-header d-sm-flex align-items-start justify-content-between">
                                        <h6 class="lh-5 mg-b-0">Ordenar capas padre </h6>
                                    </div>*@
                            </div>
                            <div class="card-body">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <ul id="sortable" class="list-group list-unstyled"></ul>
                                        </div>
                                    </div>
                                    <div class="row justify-content-center mt-4">
                                        <div class="col-md-12">
                                            <div class="form-group text-right">
                                                <button type="button" class="btn btn-info btn-fill" data-dismiss="modal">@Localizer["Cancel"]</button>
                                                <button type="button" id="btnSave" onclick="updateBatch('ProjectLayers'); return false;" class="btn btn-default btn-fill">@Localizer["Save"]</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end card -->
                    </div>
                </div>
            </div>
            <div class="modal-footer ">
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/_DataTablesScriptsPartial.cshtml")

@section Scripts {
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://code.iconify.design/1/1.0.3/iconify.min.js"></script>
    <script type="text/javascript" src="~/js/core/vProjectManagerLayers.js" asp-append-version="true"></script>
}
