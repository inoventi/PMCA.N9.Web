@model PMCTool.Models.Core.Location
@{
    ViewData["Title"] = "Acciones a realizar";
    Layout = "_Layout";
    var envName = Context.Request.Cookies["pmctool-name-env"];

}
@section ScriptsHeader
{
    <link href="~/css/vcore/project-evidences.css" rel="stylesheet" asp-append-version="true" />
}
<style>
    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        padding: 4px 4px;
        vertical-align: middle;
        border-color: #E3E3E3;
    }

    td, th { /* table cells */
        padding: 10px;
    }

    table {
        border-spacing: 1px;
        border-collapse: separate;
    }

    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        padding: 0px 0px;
        vertical-align: middle;
        border-color: #ffffff;
    }

    .bg {
        font-weight: 600;
        background: #d9d9d9;
    }

    .txt-center {
        text-align: center;
    }


    .highcharts-figure,
    .highcharts-data-table table {
        min-width: 310px;
        max-width: 800px;
        margin: 1em auto;
    }

    #container {
        height: 400px;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid var(--highcharts-neutral-color-10, #e6e6e6);
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: var(--highcharts-neutral-color-60, #666);
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td,
    .highcharts-data-table th,
    .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr,
    .highcharts-data-table tbody tr:nth-child(even) {
        background: var(--highcharts-neutral-color-3, #f7f7f7);
    }

    .highcharts-description {
        margin: 0.3rem 10px;
    }

</style>
<div class="content bg-whitebg-white">
    <div class="container-fluid">
        <div class="col-md-12 card">
            <div class="row">
                <div class="col-md-12 pt-4 mb-2">
                    <small class="font-weight-normal subtitle-detalle">Selecciona un reporte</small> 
                </div>
                <div class=" col-12 mt-0">
                    <!-- uno .-->
                    <div class="row">
                        <div class="col-9">
                            <select name="projects" class="selectpicker sel-projects" id="selprojects" data-title="Proyectos" data-style="btn-default btn-outline" data-menu-style="dropdown-blue">
                                @foreach (var project in ViewBag.projects)
                                {
                                    <option value="@project.Key">@project.Value</option>
                                }
                            </select>
                        </div>
                        
                        <div class="col-3 pt-1">

                            <button type="button" class="btn btn-default btn-default btn-report">
                                <i class="fas fa-file-pdf"></i> @Localizer["Analytics5_020"]
                            </button> 
                        </div>
                    </div>
                    <div class="row  justify-content-center pt-0">
                        <div class="col-md-12">
                            <div class="row">
                                 
                            </div>
                            <!-- cotenido partial-->
                            <div class="col-12 pt-4 _box001">
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("~/Views/Shared/_DataTablesScriptsPartial.cshtml")
<!--Sección de scripts-->
@section scripts
{ 
    <!--  DataTable Plugin -->
    <script src="~/js/plugins/jquery.dataTables.min.js"></script>
    <script src="~/js/core/analitycs/ProjectEvidences.js" asp-append-version="true"></script>
    <script type="text/javascript">

    </script>
}

