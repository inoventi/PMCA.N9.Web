@model PMCTool.Models.Core.Location
@{
    ViewData["Title"] = "Detalle projecto";
    Layout = "_Layout";
    var envName = Context.Request.Cookies["pmctool-name-env"];

}
@section ScriptsHeader
{
}
<style>
    .page-title-box .page-title {
        font-size: 18px;
        margin: 0;
        line-height: 36px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        font-weight: 700;
        color: #607d8b;
    }
</style>
<div class="content">
    <div class="container-fluid pl-0 ml-0">
        <div class="row justify-content-center mt-3">
            <div class="col-11 pl-2 pr-2">
                <div class="row g-0">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-10 col-sm-10">
                                <div class="btn-group bootstrap-select">
                                    <select name="projects" class="selectpicker sel-projects" id="selprojects" data-title="Proyectos" data-style="btn-default btn-outline" data-menu-style="dropdown-blue">
                                        @foreach (var project in ViewBag.projects)
                                        {
                                            <option value="@project.Key">@project.Value</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="btn-group col-2 col-sm-2 pt-2">
                                <button type="button" class="btn btn-default btn-default btn-report">
                                    <i class="fas fa-file-pdf"></i> @Localizer["Search"]
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-11 pl-2 pr-2">
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box">
                            <div class="page-title-right">
                            </div>
                            <h4 class="page-title">Bienvenido a PMC-Tool</h4>
                        </div>
                    </div>
                </div>
                <div class="row g-0">
                    <div class="col-sm-2 col-lg-2">
                        <div class="card shadow-none m-0">
                            <div class="card-body text-center">
                                <i class="fas fa-server text-muted" style="font-size: 24px;"></i>
                                <h3><span class="Count tt-participants">9</span></h3>
                                <h6 class="text-muted font-15 mb-0">Recursos Asignados</h6>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2 col-lg-2">
                        <div class="card shadow-none m-0 border-start">
                            <div class="card-body text-center">
                                <i class="fas fa-tasks text-muted" style="font-size: 24px;"></i>
                                <h3><span class="Count tt-task">11</span></h3>
                                <h6 class="text-muted font-15 mb-0">Total de actividades</h6>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2 col-lg-2">
                        <div class="card shadow-none m-0 border-start">
                            <div class="card-body text-center">
                                <i class="fas fa-file-alt text-muted" style="font-size: 24px;"></i>
                                <h3><span class="Count  tt-task-delayed">7</span></h3>
                                <h6 class="text-muted font-15 mb-0">Actividades con retrazo</h6>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2 col-lg-2">
                        <div class="card shadow-none m-0 border-start">
                            <div class="card-body text-center">
                                <i class="fas fa-chart-line text-muted" style="font-size: 24px;"></i>
                                <h3><span class="Count tt-risk">66</span></h3>
                                <h6 class="text-muted font-15 mb-0">Riesgos Identificados</h6>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2 col-lg-2">
                        <div class="card shadow-none m-0 border-start">
                            <div class="card-body text-center">
                                <i class="fas fa-tasks text-muted" style="font-size: 24px;"></i>
                                <h3><span class="Count tt-risk-closed">1</span></h3>
                                <h6 class="text-muted font-15 mb-0">Riesgos Mitigados</h6>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2 col-lg-2">
                        <div class="card shadow-none m-0 border-start">
                            <div class="card-body text-center">
                                <i class="fas fa-file-alt text-muted" style="font-size: 24px;"></i>
                                <h3><span class="Count tt-changes">7</span></h3>
                                <h6 class="text-muted font-15 mb-0">Control de cambios</h6>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <b class="header-title">Cambios en proyectos</b>
                                </div>
                                <div id="box-chart" style="height: 312px; max-height: 312px; position: relative; ">
                                    <div id="chart">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <b class="header-title">Cambios en proyectos</b>

                                </div>
                                <div id="box-chart" style="height: 312px; max-height: 312px; position: relative; ">
                                    <div id="chart">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row bt-2">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-6 text-center  small px-4  text-left">
                                            <strong class="txt-blue"> Avance real <span class="underline-link real-progress"> 67.44 %</span> </strong>
                                            <div class="progress" style="height: 15px;">
                                                <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated graphic-real-progress" style="width:67.44%;"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-6  text-center small px-4  text-left">
                                            <strong class="txt-blue"> Avance planeado <span class="underline-link planned-progress"> 100.00 %</span> </strong>
                                            <div class="progress" style="height: 15px;">
                                                <div class="progress-bar bg-default  progress-bar-striped progress-bar-animated graphic-planned-progress" style="width:100%"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header" style="background: #1a2545;color: white;">
                                <b>Elementos Atrasados o En Curso</b>
                            </div>
                            <div class="card-body">
                                <div class="col-12">
                                    <div class="table-responsive">
                                        <table class="table table-projects" width="100%">
                                            <thead class="thead-light header-table-projects" stry>
                                                <tr style="background: #c1c1c1;">
                                                    <th style=" height: 50px;vertical-align: middle;">Elementos de Control</th>
                                                    <th style=" height: 50px;vertical-align: middle;">Descripcion</th>
                                                    <th style=" height: 50px;vertical-align: middle;">Fecha planeada de fin</th>
                                                    <th style=" height: 50px;vertical-align: middle;">Estado</th>
                                                </tr>
                                            </thead>
                                            <tbody class="body-table-projects">
                                                <tr>
                                                    <td>Actividad</td>
                                                    <td><a>(5.3.1). Retiro del Servicio</a></td>
                                                    <td>2025-03-31</td>
                                                    <td><span class="badge ws badge-warning"><strong>Atrasado</strong></span></td>
                                                </tr>
                                                <tr>
                                                    <td>Actividad</td>
                                                    <td><a>(5.4) - Cierre de Proyecto</a></td>
                                                    <td>2025-03-31</td>
                                                    <td><span class="badge ws badge-warning"><strong>Atrasado</strong></span></td>
                                                </tr>
                                                <tr>
                                                    <td>Actividad</td>
                                                    <td><a>(5.4.1) - FO-MBT-DEP-10 Lecciones Aprendidad V01</a></td>
                                                    <td>2025-03-31</td>
                                                    <td><span class="badge ws badge-warning"><strong>Atrasado</strong></span></td>
                                                </tr>
                                                <tr>
                                                    <td>Actividad</td>
                                                    <td><a>(5.3) - Entregables Finales</a></td>
                                                    <td>2025-03-31</td>
                                                    <td><span class="badge ws badge-warning"><strong>Atrasado</strong></span></td>
                                                </tr>
                                                <tr>
                                                    <td>Actividad</td>
                                                    <td><a>(5.3.2) - Entregables Finales</a></td>
                                                    <td>2025-03-31</td>
                                                    <td><span class="badge ws badge-warning"><strong>Atrasado</strong></span></td>
                                                </tr>
                                                <tr>
                                                    <td>Actividad</td>
                                                    <td><a>(5) - Cierre</a></td>
                                                    <td>2025-03-31</td>
                                                    <td><span class="badge ws badge-warning"><strong>Atrasado</strong></span></td>
                                                </tr>
                                                <tr>
                                                    <td>Actividad</td>
                                                    <td><a>(5.4.1) - FO-MBT-DEP-16 Acta de Cierre V01</a></td>
                                                    <td>2025-03-31</td>
                                                    <td><span class="badge ws badge-warning"><strong>Atrasado</strong></span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Sección de scripts-->
@section scripts
{
    <script src="~/js/plugins/bootstrap-datetimepicker.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/locale/es.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    <script src="https://code.highcharts.com/themes/adaptive.js"></script>

    <script src="~/js/core/analitycs/vProjectDetail.js" asp-append-version="true"></script>

}