@model PMCTool.Models.Core.Location
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="content contenido">
    <div class="container-fluid">

        <div class="col-md-12 card">
            <div class="container-fluid flex-grow-1 container-p-y  pl-0 pr-0">
                <div class="col-md-12 pt-4">
                    <small class="font-weight-normal">Analytics</small>
                    <h4 class="Chapala align-items-center font-weight-bold  mb-0 mt-0">
                        <span class="color-drackred"> Ubicación de sucursales	</span>
                    </h4>
                </div>
                <div class="row justify-content-center mt-3">
                    <div class="col-12">
                        <div class="row">
                            <div class="ml-2">
                                @Html.DropDownListFor(m => m.Name, new SelectList(ViewBag.States, "Key", "Value"), new { @id = "Estate", @class = "selectpicker", @style = "", @data_style = "btn-default btn-outline", @data_title = "Estados" })
                            </div>
                            <div class="ml-2">
                                <select multiple id="Municipios" name="Municipios" class="selectpicker" data-title="Municipio" data-style="btn-default btn-outline" data-menu-style="dropdown-blue" data-actions-box="true">
                                </select>
                            </div>
                            <div class="ml-2">
                                <select multiple id="predio" name="predio" class="selectpicker" data-title="Clasificación" data-style="btn-default btn-outline" data-menu-style="dropdown-blue">
                                    <option value="Prioritarias 500">Prioritarias 500</option>
                                    <option value="Bloque 2022">Bloque 2022</option>
                                </select>
                            </div>
                            <div class="ml-2 mt-1">
                                <button type="button" id="btnReporte" class="btn btn-wd btn-default btn-default">
                                    <span class="btn-label">
                                        <i class="fa fa-file-alt"></i>
                                    </span>
                                    Mostrar Reporte
                                </button>
                                <button type="button" id="btnClose" class="btn btn-wd btn-default btn-default mr-1" hidden="hidden">
                                    <span class="btn-label">
                                        <i class="fas fa-times"></i>
                                    </span>
                                    Cerrar Reporte
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-4">
                    <div class="col-md-12 text-right text-right">
                        <button class="btn btn-social btn-tumblr btn-link" id="btnPDF" onclick="vBranchLocationClass.MakePDF();" hidden="hidden">
                            <i class="fas fa-file-pdf"></i> Exportar en PDF
                        </button>
                    </div>
                </div>
                <div class="row justify-content-center mt-3 div-map" hidden="hidden">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body ">
                                <div id="regularMap" class="map"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center div-table" hidden="hidden">
                    <div class="col-12">
                        <div class="card data-tables">
                            <div class="card-body table-striped table-no-bordered table-hover dataTable dtr-inline table-full-width">
                                <div class="toolbar">
                                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                                </div>
                                <div class="fresh-datatables">
                                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Sucursales</th>
                                                <th>Estado</th>
                                                <th>Municipio</th>
                                                <th>Localidad</th>
                                                <th>Estatus</th>
                                                <th>Avance</th>
                                            </tr>
                                        </thead>
                                        <tbody id="dataTable">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" id="rowEncabezado" hidden="hidden">
                    <div class="col-md-12">
                        <div id="encabezado">
                            <div style="margin: 2%">
                                <!-- Navbar -->
                                <nav class="navbar navbar-expand-lg " style="padding-bottom: 31px">
                                    <div class="container-fluid" style="padding-bottom: 0px;">
                                        <div class="col-md-12">
                                            <div class="row" style="padding-top:12px; height: 90px;">
                                                <div class="col-md-8 text-left">
                                                    <div style="font-size: 1.5em; color: #235B4E !important; padding-top: 22px; text-transform: uppercase;">
                                                        <strong>Ubicación de sucursales</strong>
                                                    </div>
                                                </div><div class="col-md-4 text-right">
                                                    <img src="/images/banbien.png" width="100px" style="top: 0px; right: 36px;">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" id="divCanvas">
                    <div class="col-md-12">
                        <div id="contenedorCanvas">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Sección de scripts-->
@section scripts
{
    <script src="~/js/plugins/jquery.dataTables.min.js"></script>
    <!--  Google Maps Plugin    -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAT4_lYZoSRsv9h_reS4rR8lBgzY6ZchYI&libraries=&v=weekly" defer></script>
    <script src="~/js/plugins/html2canvas.min.js"></script>
    <script src="~/js/plugins/jspdf.js"></script>
    <script src="~/js/core/vBranchLocations.js" asp-append-version="true"></script>
    <script src="~/js/core/vBranchAdvances.js" asp-append-version="true"></script>
}

