@model PMCTool.Models.Environment.Participant;

@Html.Hidden("AreYouSureDelete", Localizer["AreYouSureDelete"].ToString())
@Html.Hidden("Cancel", Localizer["Cancel"].ToString())
@Html.Hidden("Accept", Localizer["Accept"].ToString())
@Html.Hidden("Edit", Localizer["Edit"].ToString())
@Html.Hidden("Delete", Localizer["Delete"].ToString())
@Html.Hidden("User", Localizer["User"].ToString())
@Html.Hidden("DragDrop", Localizer["DragDrop"].ToString())
@Html.Hidden("Upload", Localizer["Upload"].ToString())
@Html.Hidden("EnumCostType_1", Localizer["EnumCostType_1"].ToString())
@Html.Hidden("EnumCostType_2", Localizer["EnumCostType_2"].ToString())
@Html.Hidden("EnumCostType_3", Localizer["EnumCostType_3"].ToString())
@Html.Hidden("Yes", Localizer["Yes"].ToString().ToUpper())
@Html.Hidden("Active", Localizer["Active"].ToString())
@Html.Hidden("Inactive", Localizer["Inactive"].ToString())
@Html.Hidden("FileExtension", Localizer["FileExtensionNotAllowed"].ToString())
@Html.Hidden("FormatAllowed", Localizer["BlukLoadFormatAllowed"].ToString())

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-right">
                <button onclick="newEntry(); return false;" class="btn btn-default btn-fill"><i class="fas fa-plus-circle"></i> @Localizer["New"]</button>
                <button id="bulkload" onclick="showBulK(); return false;" class="btn btn-default btn-fill"><i class="fas fa-file-import"></i> @Localizer["BulkLoad"]</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card data-tables">
                    <div class="card-body table-striped table-no-bordered table-hover dataTable dtr-inline table-full-width">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar          -->
                        </div>
                        <div class="fresh-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover display responsive nowrap" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@Localizer["Code"]</th>
                                        <th>@Localizer["Name"]</th>
                                        <th>@Localizer["Lastname"]</th>
                                        <th>@Localizer["Surname"]</th>
                                        <th>@Localizer["Status"]</th>
                                        <th>@Localizer["Email"]</th>
                                        <th>@Localizer["AreaID"]</th>
                                        <th>@Localizer["Area"]</th>
                                        <th>@Localizer["FunctionID"]</th>
                                        <th>@Localizer["Function"]</th>
                                        <th>@Localizer["EscalationID"]</th>
                                        <th>@Localizer["Escalation"]</th>
                                        <th>@Localizer["CostType"]</th>
                                        <th>@Localizer["CurrencyID"]</th>
                                        <th>@Localizer["Currency"]</th>
                                        <th>@Localizer["User"]</th>
                                        <th>@Localizer["Created"]</th>
                                        <th>@Localizer["CreatedBy"]</th>
                                        <th>@Localizer["Updated"]</th>
                                        <th>@Localizer["UpdatedBy"]</th>
                                        <th class="disabled-sorting text-right">@Localizer["Action"]</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th></th>
                                        <th>@Localizer["Code"]</th>
                                        <th>@Localizer["Name"]</th>
                                        <th>@Localizer["Lastname"]</th>
                                        <th>@Localizer["Surname"]</th>
                                        <th>@Localizer["Status"]</th>
                                        <th>@Localizer["Email"]</th>
                                        <th>@Localizer["AreaID"]</th>
                                        <th>@Localizer["Area"]</th>
                                        <th>@Localizer["FunctionID"]</th>
                                        <th>@Localizer["Function"]</th>
                                        <th>@Localizer["EscalationID"]</th>
                                        <th>@Localizer["Escalation"]</th>
                                        <th>@Localizer["CostType"]</th>
                                        <th>@Localizer["CurrencyID"]</th>
                                        <th>@Localizer["Currency"]</th>
                                        <th>@Localizer["User"]</th>
                                        <th>@Localizer["Created"]</th>
                                        <th>@Localizer["CreatedBy"]</th>
                                        <th>@Localizer["Updated"]</th>
                                        <th>@Localizer["UpdatedBy"]</th>
                                        <th class="text-right">@Localizer["Action"]</th>
                                    </tr>
                                </tfoot>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="assignUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card horizontal-form" style="border:none;">
                    <div class="card-header ">
                        <h5 class="card-title">@Localizer["ViewTitleParticipant"]</h5>
                    </div>
                    <div class="card-body ">
                        <form id="frmMain">
                            <div class="form-group">
                                @Html.HiddenFor(m => m.ParticipantUser.ParticipantID, new { @id = "ParticipantID", @class = "form-control datepicker", @style = "", @required = "required", @maxlength = 150 })
                            </div>
                            <div class="form-group">
                                <label>@Localizer["User"]</label>
                                @Html.DropDownListFor(m => m.ParticipantUser.UserID, new SelectList(ViewBag.AvailableUsers, "Key", "Value"), new { @id = "UserID", @class = "form-control", @style = "" })
                            </div>
                            <div class="card-footer text-right">
                                <button type="button" class="btn btn-info btn-fill" data-dismiss="modal">@Localizer["Cancel"]</button>
                                <button type="button" id="btnUpdate" onclick="updateParticipantUser(); return false;" class="btn btn-default btn-fill">@Localizer["Update"]</button>
                                <button type="button" id="btnCreate" onclick="updateParticipantUser(); return false;" class="btn btn-default btn-fill">@Localizer["Create"]</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="bulkModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card horizontal-form" style="border:none;">
                    <div class="card-header ">
                        <h5 class="card-title">@Localizer["BulkLoad"]</h5>
                    </div>
                    <div class="card-body ">
                        <form id="frmLoader">
                            <div id="fileuploader"></div>
                            <div><a id="bulkLink" href="">@Localizer["DownloadBulk"]</a></div>
                            <div><a id="catalogLink" href="" onclick="javascript: downloadCatalog(); return false;">@Localizer["DownloadCatalog"]</a></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <button type="button" class="btn btn-info btn-fill" data-dismiss="modal">@Localizer["Close"]</button>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/_DataTablesScriptsPartial.cshtml")

@section Scripts {
    <script type="text/javascript" src="~/js/core/vParticipant.js" asp-append-version="true"></script>
}
