@using PMCTool.App.Helpers.Html;
@{
    var userName = Context.Request.Cookies["pmctool-name-app"];
    var userImage = Context.Request.Cookies["pmctool-avatar-app"];
    var envImage = Context.Request.Cookies["pmctool-envlogo-app"];
    var lang = Context.Request.Cookies["pmctool-lang-app"];
    var envName = Context.Request.Cookies["pmctool-name-env"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Página comercial del PMC-tool">
    <meta name="author" content="InovenTI">
    <title>PMC-Tool&reg; Application</title>
    <link rel="shortcut icon" href="~/images/icono_pmc_tool.png" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,500i,700,900" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sweetalert2.min.css" asp-append-version="true" />
    @{
        string style = await MenuHelper.GetThemeStyleEnvironmen(Context);
    }
     <link rel="stylesheet" href="@style" asp-append-version="true" />   
     
   
     <link rel="stylesheet" href="~/css/pmctool.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/elementStatus.css" asp-append-version="true" />
 
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/js/plugins/popper.min.js" asp-append-version="true"></script>
    <script src="~/js/plugins/js.cookie.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/plugins/jquery.i18n.min.js" asp-append-version="true"></script>
    <script>
        if ('@AppSettings.Current.AppState' == 'Production') {
            (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-124338594-1', 'auto');
            ga('send', 'pageview');
            let enviroment = '@envName';
        }
    </script> 
    @if (lang == null || lang == "es-MX")
    {
        <script src="~/lib/jquery-validate/localization/messages_es.min.js" asp-append-version="true"></script>
        <script src="~/js/localization/messages_es.js" asp-append-version="true"></script>
    }
    else
    {
        <script src="~/js/localization/messages_us.js" asp-append-version="true"></script>
    }  
     
</head>
<body>

    <div class="wrapper">
        <div class="sidebar" data-color="black" data-image="/images/full-screen-bg.png">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="/Home/index" class="simple-text logo-mini">
                        <img src="~/images/1.png" alt="logo" style="height: 33px;" asp-append-version="true">
                    </a>
                    <a href="/Home/index" class="simple-text logo-normal">
                        <img src="~/images/2.png" alt="logo" style="height: 33px;" asp-append-version="true">
                    </a>
                </div>
                <div class="user">
                    <div class="photo">
                        @{
                            if (!string.IsNullOrEmpty(userImage))
                            {
                                <img src="@userImage" asp-append-version="true" />
                            }
                            else
                            {
                                <img src="~/images/avatar/default-avatar.png" asp-append-version="true" />
                            }
                        }
                    </div>
                    <div class="info ">
                        <a data-toggle="collapse" href="#collapseExample" class="collapsed">
                            <span>@userName</span>
                        </a>
                    </div>
                </div>

                @await MenuHelper.RenderMenu(Context)
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg ">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-minimize">
                            <button id="minimizeSidebar" class="btn btn-default btn-fill btn-round btn-icon d-none d-lg-block">
                                <i class="fa fa-ellipsis-v visible-on-sidebar-regular"></i>
                                <i class="fa fa-navicon visible-on-sidebar-mini"></i>
                            </button>
                        </div>
                        <a class="navbar-brand" href=""> @ViewBag.Title </a>
                    </div>
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav">

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="nc-icon nc-bullet-list-67"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">

                                    <a class="dropdown-item" href="@Url.Action("Lock", "Home")">
                                        <i class="nc-icon nc-lock-circle-open"></i> @Localizer["Lockscreen"]
                                    </a>
                                    <a href="@Url.Action("Logout", "Auth")" class="dropdown-item text-danger">
                                        <i class="nc-icon nc-button-power"></i> @Localizer["Logout"]
                                    </a>
                                </div>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            @RenderBody()
            @await Html.PartialAsync("~/Views/Shared/_LayoutFooterPartial.cshtml")
        </div>
    </div>

    <script type="text/javascript" src="~/js/plugins/moment.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/plugins/moment-duration-format.min.js" asp-append-version="true"></script>

    <script src="~/js/plugins/sweetalert2.min.js" asp-append-version="true"></script>
    <script src="~/js/plugins/bootstrap-tagsinput.js" asp-append-version="true"></script>
    <script src="~/js/light-bootstrap-dashboard.js" asp-append-version="true"></script>
    <script src="~/js/plugins/bootstrap-notify.js"></script>
    <script src="~/js/plugins/bootstrap-selectpicker.js" type="text/javascript"></script>

    <script src="~/js/pmctool.js" asp-append-version="true"></script>
    <script src="~/js/helper.js" asp-append-version="true"></script>

    <script>window.webroot = "@Url.Content("~/")";</script>
    @{
        if (@AppSettings.Current.AppState == "Production")
        {
            <script src="~/js/plugins/analytics.js" asp-append-version="true"></script>
        }
    }
    @RenderSection("Scripts", required: false)
    </body>
</html>

<div id="loader" class="spinner" hidden="hidden">
    <div class="rect1"></div>
    <div class="rect2"></div>
    <div class="rect3"></div>
    <div class="rect4"></div>
    <div class="rect5"></div>
</div>
