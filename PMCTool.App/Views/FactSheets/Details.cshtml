@model PMCTool.Models.Environment.FactSheetDetail

@Html.Hidden("AreYouSureDelete", Localizer["AreYouSureDelete"].ToString())
@Html.Hidden("Cancel", Localizer["Cancel"].ToString())
@Html.Hidden("Accept", Localizer["Accept"].ToString())
@Html.Hidden("Yes", Localizer["Yes"].ToString())
@Html.Hidden("Edit", Localizer["Edit"].ToString())
@Html.Hidden("Delete", Localizer["Delete"].ToString())
@Html.Hidden("FactID", Model.FactSheetID)

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-right">
                <button onclick="newDetailEntry(); return false;" class="btn btn-default btn-fill"><i class="fas fa-plus-circle"></i> @Localizer["New"]</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card data-tables">
                    <div class="card-body table-striped table-no-bordered table-hover dataTable dtr-inline table-full-width">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar          -->
                        </div>
                        <div class="fresh-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover display responsive nowrap" cellspacing="0" style="width:100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@Localizer["Key"]</th>
                                        <th>@Localizer["Value"]</th>
                                        <th>@Localizer["Order"]</th>
                                        <th>@Localizer["Tooltip"]</th>
                                        <th>@Localizer["Created"]</th>
                                        @*<th>@Localizer["CreatedBy"]</th>*@
                                        <th>@Localizer["Updated"]</th>
                                        @*<th>@Localizer["UpdatedBy"]</th>*@
                                        <th class="disabled-sorting text-left">@Localizer["Action"]</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th></th>
                                        <th>@Localizer["Key"]</th>
                                        <th>@Localizer["Value"]</th>
                                        <th>@Localizer["Order"]</th>
                                        <th>@Localizer["Tooltip"]</th>
                                        <th>@Localizer["Created"]</th>
                                        @*<th>@Localizer["CreatedBy"]</th>*@
                                        <th>@Localizer["Updated"]</th>
                                        @*<th>@Localizer["UpdatedBy"]</th>*@
                                        <th class="text-left">Actions</th>
                                    </tr>
                                </tfoot>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card horizontal-form" style="border:none;">
                    <div class="card-header ">
                        <h5 class="card-title">@Localizer["Details"]</h5>
                    </div>
                    <div class="card-body ">
                        <form id="frmMainDetail">
                            @Html.HiddenFor(m => m.FactSheetDetailID)
                            @Html.HiddenFor(m => m.Key)

                            @*<div class="form-group">
                                <label>@Localizer["Key"]</label><star class="star">*</star>
                                @Html.TextBoxFor(m => m.Key, new { @id = "Key", @class = "form-control", @style = "", @required = "required", @maxlength = 150 })
                            </div>*@
                            <div class="form-group">
                                <label>@Localizer["Value"]</label><star class="star">*</star>
                                @Html.TextBoxFor(m => m.Value, new { @id = "Value", @class = "form-control", @style = "", @required = "required", @maxlength = 150 })
                            </div>
                            <div class="form-group">
                                <label>@Localizer["Tooltip"]</label>
                                @Html.TextAreaFor(m => m.Tooltip, new { @id = "Tooltip", @class = "form-control", @style = "", @maxlength = 65535, @rows = 8 })
                            </div>
                            <div class="form-group">
                                <label>@Localizer["Order"]</label>
                                @Html.DropDownListFor(m => m.Order, new SelectList(ViewBag.FactSheetDetailOrder, "Key", "Value"), new { @id = "Order", @class = "form-control", @style = "" })
                            </div>
                            <div class="card-footer text-right">
                                <button type="button" class="btn btn-info btn-fill" data-dismiss="modal">@Localizer["Cancel"]</button>
                                <button type="button" id="btnUpdateDetail" onclick="updateDetailRecord('FactSheets'); return false;" class="btn btn-default btn-fill">@Localizer["Update"]</button>
                                <button type="button" id="btnCreateDetail" onclick="createDetailRecord('FactSheets'); return false;" class="btn btn-default btn-fill">@Localizer["Create"]</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/_DataTablesScriptsPartial.cshtml")

@section Scripts {
    <script type="text/javascript" src="~/js/core/vFactSheetsDetails.js" asp-append-version="true"></script>
}