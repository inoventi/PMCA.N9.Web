@model PMCTool.Models.Environment.Board

@Html.Hidden("OldCode", Model.Code)
@Html.Hidden("AreYouSureDelete", Localizer["AreYouSureDelete"].ToString())
@Html.Hidden("Cancel", Localizer["Cancel"].ToString())
@Html.Hidden("Accept", Localizer["Accept"].ToString())
@Html.Hidden("Edit", Localizer["Edit"].ToString())
@Html.Hidden("Delete", Localizer["Delete"].ToString())
@Html.Hidden("Yes", Localizer["Yes"].ToString().ToUpper())
@Html.Hidden("Active", Localizer["Active"].ToString())
@Html.Hidden("Inactive", Localizer["Inactive"].ToString())

@Html.Hidden("Logo", Localizer["Logo"].ToString())
@Html.Hidden("ImageLabel", Localizer["Image"].ToString())
@Html.Hidden("PortfolioLabel", Localizer["Portfolio"].ToString())
@Html.Hidden("ImageFormatAllowed", Localizer["ImageFormatAllowed"].ToString())

@Html.Hidden("EnumProjectWeighingManagement_1", Localizer["EnumProjectWeighingManagement_1"].ToString())
@Html.Hidden("EnumProjectWeighingManagement_2", Localizer["EnumProjectWeighingManagement_2"].ToString())
@Html.Hidden("EnumProjectWeighingManagement_3", Localizer["EnumProjectWeighingManagement_3"].ToString())

@Html.Hidden("ID")

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-right">
                <button onclick="newEntry(); return false;" class="btn btn-default btn-fill"><i class="fas fa-plus-circle"></i> @Localizer["New"]</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card data-tables">
                    <div class="card-body table-striped table-no-bordered table-hover dataTable dtr-inline table-full-width">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar          -->
                        </div>
                        <div class="fresh-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover display responsive nowrap" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        @*<th></th>*@
                                        <th>@Localizer["Code"]</th>
                                        <th>@Localizer["Name"]</th>
                                        <th>@Localizer["Description"]</th>
                                        <th>@Localizer["Status"]</th>
                                        <th>@Localizer["Created"]</th>
                                        <th>@Localizer["CreatedBy"]</th>
                                        <th>@Localizer["Updated"]</th>
                                        <th>@Localizer["UpdatedBy"]</th>
                                        <th class="disabled-sorting text-left">@Localizer["Action"]</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th></th>
                                        @*<th></th>*@
                                        <th>@Localizer["Code"]</th>
                                        <th>@Localizer["Name"]</th>
                                        <th>@Localizer["Description"]</th>
                                        <th>@Localizer["Status"]</th>
                                        <th>@Localizer["Created"]</th>
                                        <th>@Localizer["CreatedBy"]</th>
                                        <th>@Localizer["Updated"]</th>
                                        <th>@Localizer["UpdatedBy"]</th>
                                        <th class="text-left">@Localizer["Action"]</th>
                                    </tr>
                                </tfoot>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card horizontal-form" style="border:none;">
                    <div class="card-header ">
                        <h5 class="card-title">@Localizer["ViewTitleDashboard"]</h5>
                    </div>
                    <div class="card-body ">
                        <form id="frmMain">
                            @Html.HiddenFor(m => m.BoardID)
                            <div class="form-group">
                                <label>@Localizer["Code"]</label>
                                @Html.TextBoxFor(m => m.Code, new { @id = "Code", @class = "form-control", @style = "", @maxlength = 50 })
                            </div>
                            <div class="form-group">
                                <label>@Localizer["Name"]</label><star class="star">*</star>
                                @Html.TextBoxFor(m => m.Name, new { @id = "Name", @class = "form-control", @style = "", @required = "required", @maxlength = 150 })
                            </div>
                            <div class="form-group">
                                <label>@Localizer["Description"]</label>
                                @Html.TextAreaFor(m => m.Description, new { @id = "Description", @class = "form-control", @style = "", @maxlength = 500 })
                            </div>
                            @*<div class="form-group">
                                    <label>@Localizer["WeighingManagement"]</label><star class="star">*</star>
                                    @Html.DropDownListFor(m => m.WeighingManagement, new SelectList(ViewBag.ProjectWeighingManagement, "Key", "Value"), new { @id = "WeighingManagement", @class = "form-control", @style = "", @required = "required" })
                                </div>*@
                            <div class="form-group">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        @Html.CheckBoxFor(m => m.IsActive, new { @id = "IsActive", @class = "form-check-input" })
                                        <span class="form-check-sign"></span>
                                        @Localizer["Active"]
                                    </label>
                                </div>
                            </div>
                            <div class="card-footer text-right">
                                <button type="button" class="btn btn-info btn-fill" data-dismiss="modal">@Localizer["Cancel"]</button>
                                <button type="button" id="btnUpdate" onclick="updateRecord('Dashboards'); return false;" class="btn btn-default btn-fill">@Localizer["Update"]</button>
                                <button type="button" id="btnCreate" onclick="createRecord('Dashboards'); return false;" class="btn btn-default btn-fill">@Localizer["Create"]</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card horizontal-form" style="border:none;">
                    <div class="card-header ">
                        <h5 class="card-title"><span id="umProjectName"></span></h5>
                    </div>
                    <div class="card-body ">
                        <form id="frmFile">
                            <div class="form-group text-center">
                                <img id="umProjectImage" src="" style="max-width:200px;" />
                            </div>
                            <div class="form-group">
                                <label>@Localizer["Logo"]</label>
                                @Html.TextBoxFor(m => m.Image, new { @id = "Image", @class = "form-control", @style = "", type = "file", @required = "required", accept = "image/*" })
                            </div>
                            <div class="card-category form-category">
                                <star class="star">*</star> @Localizer["ImageSuggestedSize"]: 370px 370px
                            </div>
                            <div class="card-footer text-right">
                                <a class="btn btn-link btn-danger float-left" id="deleteImage" data-toggle="tooltip" style='font-size:18px; color: #FB404B;' onclick="deleteFile(); return false" title="@Localizer["Delete"]"><i class="far fa-trash-alt "></i></a>
                                <button type="button" class="btn btn-info btn-fill" data-dismiss="modal">@Localizer["Cancel"]</button>
                                <button type="button" id="btnUpload" onclick="uploadFile(); return false;" class="btn btn-default btn-fill">@Localizer["Upload"]</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/_DataTablesScriptsPartial.cshtml")

@section Scripts {
    <script type="text/javascript" src="~/js/core/vDashboard.js" asp-append-version="true"></script>
}