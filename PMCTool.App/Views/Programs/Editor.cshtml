@model PMCTool.Models.Environment.Program

@Html.Hidden("OldCode", Model.Code)

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form id="frmMain" enctype="multipart/form-data">
                    @Html.HiddenFor(m => m.ProgramID)

                    <div class="card">
                        <div class="card-header ">
                            <div class="card-header">
                                @{
                                    if (ViewBag.IsNew == true)
                                    {
                                        <h4 class="card-title">@Localizer["New"] @Localizer["Program"]</h4>
                                    }
                                    else
                                    {
                                        <h4 class="card-title">@Localizer["Update"] @Localizer["Program"]</h4>
                                    }
                                }
                            </div>
                        </div>
                        <div class="card-body ">
                            <div class="row justify-content-center">
                                <div class="col-md-3 px-2">
                                    <div class="form-group">
                                        <label>@Localizer["Code"]</label>
                                        @Html.TextBoxFor(m => m.Code, new { @id = "Code", @class = "form-control", @style = "", @maxlength = 50 })
                                    </div>
                                </div>
                                <div class="col-md-9 px-2">
                                    <div class="form-group">
                                        <label>@Localizer["Name"]</label><star class="star">*</star>
                                        @Html.TextBoxFor(m => m.Name, new { @id = "Name", @class = "form-control", @style = "", @required = "required", @maxlength = 150 })
                                    </div>

                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-12 px-2">
                                    <div class="form-group">
                                        <label>@Localizer["Description"]</label>
                                        @Html.TextAreaFor(m => m.Description, new { @id = "Description", @class = "form-control", @style = "", @maxlength = 250 })
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-6 px-2">
                                    <div class="form-group">
                                        <label>@Localizer["Sponsor"]</label><star class="star">*</star>
                                        @Html.DropDownListFor(m => m.SponsorID, new SelectList(ViewBag.Sponsor, "Key", "Value"), new { @id = "SponsorID", @class = "form-control", @style = "", @required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-6 px-2">
                                    <div class="form-group">
                                        <label>@Localizer["Leader"]</label><star class="star">*</star>
                                        @Html.DropDownListFor(m => m.LeaderID, new SelectList(ViewBag.Leader, "Key", "Value"), new { @id = "LeaderID", @class = "form-control", @style = "", @required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-6 px-2">
                                    <div class="form-group">
                                        <label>@Localizer["ProgramManager"]</label><star class="star">*</star>
                                        @Html.DropDownListFor(m => m.ProjectManagerID, new SelectList(ViewBag.ProjectManager, "Key", "Value"), new { @id = "ProjectManagerID", @class = "form-control", @style = "", @required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-6 px-2">
                                    <div class="form-group">
                                        <label>@Localizer["Company"]</label><star class="star">*</star>
                                        @Html.DropDownListFor(m => m.CompanyID, new SelectList(ViewBag.Companies, "Key", "Value"), new { @id = "CompanyID", @class = "form-control", @style = "", @required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                @*<div class="col-md-6 px-2">
                                    <div class="form-group">
                                        <label>@Localizer["Portfolio"]</label>
                                        @Html.DropDownListFor(m => m.ParentID, new SelectList(ViewBag.Parent, "Key", "Value"), new { @id = "ParentID", @class = "form-control", @style = "" })
                                    </div>
                                </div>*@
                                <div class="col-md-6 px-2">
                                    @*<div class="form-group">
                                        <label>@Localizer["Status"]</label>
                                        @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.Status, "Key", "Value"), new { @id = "Status", @class = "form-control", @style = "" })
                                    </div>*@
                                    <div class="form-group">
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                @Html.CheckBoxFor(m => m.IsActive, new { @id = "IsActive", @class = "form-check-input" })
                                                <span class="form-check-sign"></span>
                                                @Localizer["Active"]
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 px-2">
                                    <div class="form-group">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="card-footer text-right">
                            <button type="button" id="btnCancel" onclick="cancel(); return false;" class="btn btn-info btn-fill">@Localizer["Cancel"]</button>
                            @{
                                if (ViewBag.IsNew == true)
                                {
                                    <button type="button" id="btnCreate" onclick="createRecord('Programs'); return false;" class="btn btn-default btn-fill">@Localizer["Create"]</button>
                                }
                                else
                                {
                                    <button type="button" id="btnUpdate" onclick="updateRecord('Programs'); return false;" class="btn btn-default btn-fill">@Localizer["Update"]</button>
                                }
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/core/vProgramEditor.js" asp-append-version="true"></script>
}