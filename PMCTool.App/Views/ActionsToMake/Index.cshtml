@model PMCTool.Models.Core.Location
@{
    ViewData["Title"] = "Acciones a realizar";
    Layout = "_Layout";
    var envName = Context.Request.Cookies["pmctool-name-env"]; 

}
@section ScriptsHeader
{ 
    <link href="~/css/vcore/global-estatus.css" rel="stylesheet" asp-append-version="true" />
}
<div class="content">
    <div class="container-fluid">
        <div class="col-md-12 card">
            <div class="container-fluid flex-grow-1 container-p-y  pl-0 pr-0" style="    min-height: 1500px">
                <div class="col-md-12 pt-4">
                    <small class="font-weight-normal">Analytics</small>
                    <h4 class="media align-items-center font-weight-bold  mb-0 mt-0">
                        <span class="title-report">@Localizer["Analytics5_022"] </span>
                    </h4>
                </div>
                <div class="">
                    <!-- allow-->
                    <div class="container-fluid pl-0 ml-0">
                        <div class="row justify-content-center mt-3">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-12 col-sm-5">
                                        <select name="portfolio" class="selectpicker sel-portafolio" id="selportafolio" data-title="@Localizer["Analytics5_001"]" data-style="btn-default btn-outline" data-menu-style="dropdown-blue">
                                            @foreach (var portfolio in ViewBag.portfolios)
                                            {
                                                <option value="@portfolio.Key">@portfolio.Value</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-12 col-sm-4">
                                        <select name="program" class="selectpicker programa" id="selprograma" data-title="@Localizer["Analytics5_002"]" data-style="btn-default btn-outline" data-menu-style="dropdown-blue">
                                            
                                        </select>
                                    </div>
                                    <div class="col-sm-3 pt-2 text-right">
                                      
                                        <button type="button" class="btn btn-default btn-default btn-report">
                                            <i class="fas fa-file-pdf"></i> @Localizer["Analytics5_020"]
                                        </button>
                                        <button type="button" class="btn btn-default btn-default  btn-report-close" style="    background: black;">
                                            @Localizer["Analytics5_021"]
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center mt-1">
                            <div class="col-md-12 text-right text-right">
                                <div class="row">
                                    <div class="col-md-6 text-left"> 
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 charts pp1">
                                <figure class="highcharts-figure">
                                    <div id="container1" style="height: 500px;"></div>
                                    <p class="highcharts-description"></p>
                                </figure>
                            </div>
                            <div class="col-md-6 charts">
                                <figure class="highcharts-figure">
                                    <div id="container2" style="height: 500px;"></div>
                                    <p class="highcharts-description"></p>
                                </figure>
                            </div>
                            <div class="col-12" id="table" hidden>
                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-projects" width="100%">
                                                <thead class="thead-light header-table-projects" stry>
                                                    <tr style="background: #c1c1c1;">
                                                        <th style=" height: 50px;vertical-align: middle;">@Localizer["Analytics5_010"]</th>
                                                        <th style=" height: 50px;vertical-align: middle;">@Localizer["Analytics5_012"]</th>
                                                        <th style=" height: 50px;vertical-align: middle;">@Localizer["Analytics5_011"]</th>
                                                        <th style=" height: 50px;vertical-align: middle;">@Localizer["Analytics5_013"]</th>
                                                        <th style=" height: 50px;vertical-align: middle;">@Localizer["Analytics5_014"]</th>
                                                        <th style=" height: 50px;vertical-align: middle;">@Localizer["Analytics5_015"]</th>
                                                        <th style=" height: 50px;vertical-align: middle;">@Localizer["Analytics5_016"]</th>
                                                        <th style=" height: 50px;vertical-align: middle;">@Localizer["Analytics5_017"]</th>
                                                        <th style=" height: 50px;vertical-align: middle;">@Localizer["Analytics5_006"]</th>
                                                        <th style=" height: 50px;vertical-align: middle;">@Localizer["Analytics5_018"]</th>
                                                        <th style=" height: 50px;vertical-align: middle;">@Localizer["Analytics5_019"]</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="body-table-projects">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end allow-->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Localizer["detail-report"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead class="thead-light header-table-graphic">
                        
                    </thead>
                    <tbody class="body-table-graphic">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["Close"]</button>
            </div>
        </div>
    </div>
</div> 
@await Html.PartialAsync("~/Views/Shared/_DataTablesScriptsPartial.cshtml")
<!--Sección de scripts-->
@section scripts
{
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    <script src="https://code.highcharts.com/themes/adaptive.js"></script>
    <!--  DataTable Plugin -->
    @* <script src="~/js/plugins/jquery.dataTables.min.js"></script> *@
    <script src="~/js/core/analitycs/vActionsToMake.js" asp-append-version="true"></script>
    <script type="text/javascript">
        
    </script>
}
 
