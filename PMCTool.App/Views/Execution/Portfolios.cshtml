@model List<PMCTool.Models.Environment.Portfolio>

<link rel="stylesheet" href="~/css/detalle-actividad.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/indicadores.css" asp-append-version="true" />

<div class="content">
    <div class="container-fluid">
        <div class="col-md-12">
            <form name="frmMain" method="post">
                @Html.Hidden("sortID")
                <div class="container-fluid flex-grow-1 container-p-y">
                    <div class="card mt-2">
                        <div class="row justify-content-md-center mb-4">
                            <div class="col-md-10">
                                <div class="row">
                                    <div class="col-md-12 text-left pl-0 pr-0">
                                        <h4 class="d-flex flex-wrap justify-content-between align-items-center w-100 font-weight-bold">  @Localizer["Portfolios"]  </h4>
                                    </div>
                                    <div class="col-md-12 text-right">
                                        @*<div class="dropdown">
                                                <button class="btn btn-outline dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    @{
                                                        if (ViewBag.Sort == 0)
                                                        {
                                                            @Localizer["Sort"];
                                                        }
                                                        else
                                                        {
                                                            @Localizer["EnumExecProjectSort_" + ViewBag.Sort];
                                                        }
                                                    }
                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                    <a class="dropdown-item" href="javascript:sortData(1);">@Localizer["EnumExecProgramSort_1"]</a>
                                                    <a class="dropdown-item" href="javascript:sortData(2);">@Localizer["EnumExecProgramSort_2"]</a>
                                                </div>
                                            </div>*@
                                    </div>
                                </div>

                                @{

                                    int pages = 1;
                                    int ipp = 5;
                                    double parse = Model.Count / 5.00;

                                    if (parse > 0)
                                    {
                                        pages = (int)parse;
                                        if ((parse - pages) > 0)
                                        {
                                            pages++;
                                        }
                                    }

                                    @Html.Hidden("TotalPages", pages)

                                    for (int i = 1; i <= pages; i++)
                                    {
                                        string id = "dvPage_" + i.ToString();
                                        int finish = (ipp * i) - 1;
                                        int start = 0;

                                        if (i > 1)
                                        {
                                            start = (finish + 1) - ipp;
                                        }

                                        <div id="@id" style="display:none;">

                                            @for (int x = start; x <= finish; x++)
                                            {
                                                try
                                                {
                                                    if (Model[x].PortfolioID != null)
                                                    {


                                                        string startDate = "---- -- --",
                                                            endDate = "---- -- --",
                                                            barColor = "";

                                                        double realProgress = Math.Round(Model[x].Progress * 100, 2),
                                                            expectedProgress = Math.Round(Model[x].PlannedProgress * 100, 2),
                                                            Deviation = Math.Round(Model[x].Deviation * 100, 2);

                                                        string sRealProgress = Math.Round(Model[x].Progress * 100, 2).ToString("N2") + "%",
                                                            sExpectedProgress = Math.Round(Model[x].PlannedProgress * 100, 2).ToString("N2") + "%";

                                                        if (Model[x].StartDate != null)
                                                        {
                                                            startDate = Model[x].StartDate.Value.ToString("yyyy-MM-dd");
                                                        }

                                                        if (Model[x].EndDate != null)
                                                        {
                                                            endDate = Model[x].EndDate.Value.ToString("yyyy-MM-dd");
                                                        }

                                                        switch (Model[x].Status)
                                                        {
                                                            case 1:
                                                                barColor = "progress-bar bg-success progress-bar-striped progress-bar-animated";
                                                                break;
                                                            case 2:
                                                                barColor = "progress-bar bg-warning progress-bar-striped progress-bar-animated";
                                                                break;
                                                            case 3:
                                                                barColor = "progress-bar bg-danger progress-bar-striped progress-bar-animated";
                                                                break;
                                                            case 4:
                                                                barColor = "progress-bar bg-secondary progress-bar-striped progress-bar-animated";
                                                                break;
                                                            default:
                                                                break;
                                                        }

                                                        <div class="col-md-12 no-gutters align-items-center pb-2 pt-2  border row-single pt-4 pb-4">
                                                            <div class="row">
                                                                <div class="col-md-10">
                                                                    <a href="/Execution/Portfolio?id=@Model[x].PortfolioID" class="">@Model[x].Name</a>
                                                                </div>
                                                                <div class="col-md-2">
                                                                    <small class="text-muted"><i class="fas fa-traffic-light"></i> @Localizer["Status"]: <span class="@Localizer["EnumProjectElementStatusClass_" + Model[x].Status]">@Localizer["EnumProjectElementStatus_" + Model[x].Status]</span></small>
                                                                </div>
                                                            </div>
                                                            <div class="row txt-gris mt-2 pb-3">
                                                                <div class="col-md-6">
                                                                    <i class="fas fa-folder"></i> @Localizer["TotalPrograms"]: <span class="underline-link">@Model[x].ProgramsCount.Count</span> <br>
                                                                    <div class="col-sm">
                                                                        <span class="badge badge-success">@Model[x].ProgramsCount.OnTime</span> <span class="underline-link"> @Localizer["EnumProjectElementStatus_1"]</span><br>
                                                                        <span class="badge badge-warning">@Model[x].ProgramsCount.Delayed</span> <span class="underline-link">@Localizer["EnumProjectElementStatus_2"]</span><br>
                                                                        <span class="badge badge-danger">@Model[x].ProgramsCount.WithImpact</span> <span class="underline-link">@Localizer["EnumProjectElementStatus_3"]</span><br>
                                                                        <span class="badge st-cerrado">@Model[x].ProgramsCount.Closed</span> <span class="underline-link">@Localizer["EnumProjectElementStatus_4"]</span><br>
                                                                        <span class="badge st-cancelado">@Model[x].ProgramsCount.Cancelled</span> <span class="underline-link">@Localizer["EnumProjectElementStatus_5"]</span>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <i class="fas fa-copy"></i> @Localizer["TotalProjects"]: <span class="underline-link">@Model[x].ProjectsCount.Count</span> <br>
                                                                    <div class="col-sm">
                                                                        <span class="badge badge-success">@Model[x].ProjectsCount.OnTime</span> <span class="underline-link"> @Localizer["EnumProjectElementStatus_1"]</span><br>
                                                                        <span class="badge badge-warning">@Model[x].ProjectsCount.Delayed</span> <span class="underline-link">@Localizer["EnumProjectElementStatus_2"]</span><br>
                                                                        <span class="badge badge-danger">@Model[x].ProjectsCount.WithImpact</span> <span class="underline-link">@Localizer["EnumProjectElementStatus_3"]</span><br>
                                                                        <span class="badge st-cerrado">@Model[x].ProjectsCount.Closed</span> <span class="underline-link">@Localizer["EnumProjectElementStatus_4"]</span><br>
                                                                        <span class="badge st-cancelado">@Model[x].ProjectsCount.Cancelled</span> <span class="underline-link">@Localizer["EnumProjectElementStatus_5"]</span>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-12 col-lg-4">
                                                                    <small class="text-muted">
                                                                        <i class="fas fa-calendar-alt"></i> @Localizer["StartDate"]:
                                                                        <strong class="txt-blue">@startDate</strong>
                                                                    </small>
                                                                </div>
                                                                <div class="col-md-12 col-lg-4">
                                                                    <small class="text-muted">
                                                                        <i class="fas fa-calendar-alt"></i> @Localizer["EndDate"]:
                                                                        <strong class="txt-blue">@endDate</strong>
                                                                    </small>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-4 col-md-3 text-muted small px-4  text-center">
                                                                    <strong class="txt-blue">% @Localizer["RealProgress"]</strong> <br> @realProgress.ToString("N2")
                                                                    <div class="progress" style="height: 15px;">
                                                                        <div class="@barColor" style="width:@sRealProgress;"></div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-4 col-md-3 text-muted small px-4 text-center">
                                                                    <strong class="txt-blue">% @Localizer["ExpectedProgress"]</strong> <br> @expectedProgress.ToString("N2")
                                                                    <div class="progress" style="height: 15px;">
                                                                        <div class="progress-bar bg-default  progress-bar-striped progress-bar-animated" style="width:@sExpectedProgress;"></div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-4 col-md-3 text-muted small px-4  text-center">
                                                                    <strong class="txt-blue pb-4">% @Localizer["Deviation"]</strong> <br> @Deviation.ToString("N2") %<br><br><br>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                                catch (Exception ex)
                                                {

                                                }
                                            }
                                        </div>
                                    }
                                }
                                <hr>
                                <div id="show_paginator"></div>
                                @*<nav>
                                        <ul class="pagination justify-content-center">
                                            <li class="page-item">
                                                <a class="page-link" href="javascript:goToPage(1);">«</a>
                                            </li>

                                            @for (int i = 1; i <= pages; i++)
                                            {
                                                string id = "pagelink_" + i.ToString();

                                                if (i == 1)
                                                {
                                                    <li class="page-item active" id="@id">
                                                        <a class="page-link" href="javascript:goToPage(@i);">@i</a>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="page-item" id="@id">
                                                        <a class="page-link" href="javascript:goToPage(@i);">@i</a>
                                                    </li>
                                                }
                                            }

                                            <li class="page-item">
                                                <a class="page-link" href="javascript:goToPage(@pages);">»</a>
                                            </li>
                                        </ul>
                                    </nav>*@
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/plugins/jquery.bootpag.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/core/vExecutePortfolios.js" asp-append-version="true"></script>
}