@model PMCTool.App.Models.ProjectMilestoneDetailViewModel

@{
    var lng = Context.Request.Cookies["pmctool-lang-app"];
    string endate = "";
    string real_endate = "";

    if (Model.ProjectMilestone.EndDateClient.HasValue)
    {
        endate = Model.ProjectMilestone.EndDateClient.Value.ToString("yyyy-MM-dd");
    }

    if (Model.ProjectMilestone.RealEndDate != null)
    {
        real_endate = Model.ProjectMilestone.RealEndDate;
    }


}

<link rel="stylesheet" href="~/css/detalle-actividad.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/indicadores.css" asp-append-version="true" />

<link rel="stylesheet" href="~/css/select2/select2.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/select2/select2-bootstrap4.min.css" asp-append-version="true" />
<script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.js"></script>


@Html.Hidden("AreYouSureDelete", Localizer["AreYouSureDelete"].ToString())
@Html.Hidden("Cancel", Localizer["Cancel"].ToString())
@Html.Hidden("Accept", Localizer["Accept"].ToString())
@Html.Hidden("Yes", Localizer["Yes"].ToString())
@Html.Hidden("Edit", Localizer["Edit"].ToString())
@Html.Hidden("Delete", Localizer["Delete"].ToString())

@Html.Hidden("EnumProjectElementStatus_1", Localizer["EnumProjectElementStatus_1"].ToString())
@Html.Hidden("EnumProjectElementStatus_2", Localizer["EnumProjectElementStatus_2"].ToString())
@Html.Hidden("EnumProjectElementStatus_3", Localizer["EnumProjectElementStatus_3"].ToString())
@Html.Hidden("EnumProjectElementStatus_4", Localizer["EnumProjectElementStatus_4"].ToString())
@Html.Hidden("EnumProjectElementStatus_5", Localizer["EnumProjectElementStatus_5"].ToString())

@Html.Hidden("ParticipantID", Model.ProjectMilestone.owner_id)
@Html.Hidden("ActivityStatus", Model.ProjectMilestone.status)
@Html.HiddenFor(m => m.ProjectID)
@Html.HiddenFor(m => m.ProjectTaskID)
@Html.HiddenFor(m => m.ProjectEditable)

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-md-12 pt-2">
                            <div class="row">
                                <div class="col-md-10 pt-2">
                                    <small class="font-weight-normal bold">@Localizer["Project"]</small>
                                    <h4 class="media align-items-center font-weight-bold  mb-0 mt-0">
                                        <span class="txt-blue"> @Model.ProjectName </span>
                                    </h4>
                                </div>
                                <div class="col-md-2 text-right">
                                    <a href="/Execution/Milestones?id=@Model.ProjectID" class="btn btn-sm btn-default  btn-outline"><i class="fas fa-long-arrow-alt-left"></i> @Localizer["Back"]</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 pt-2">
                            <div class="row">
                                <div class="col-md-8">
                                    <small class="font-weight-normal bold">@Localizer["Milestone"]</small>
                                    <h4 class="card-title txt-blue">@Model.ProjectMilestone.text</h4>
                                    <p class="card-category">@Localizer["DetailedMilestoneReport"]</p>
                                </div>
                                @{
                                    if (Model.ProjectEditable)
                                    {
                                        <div class="col-md-4 text-right pt-3">
                                            <a href="#" onclick="setNotificationEntry('@Model.ProjectID','@Model.ProjectTaskID',2); return false;" class="btn btn-round btn-sm"><i class="far fa-bell"></i> @Localizer["Notify"]</a>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="row pt-4 pl-3">
                                <div class="col-md-6">@Localizer["Status"]: <span id="StatusIndicator" class="bold st-atrasado ws">&nbsp;@Localizer["EnumProjectElementStatus_" + Model.ProjectMilestone.status.ToString()]</span> </div>
                                <div class="col-md-6">@Localizer["PlannedEndDate"]: <strong class="txt-blue">@endate</strong></div>
                                <div class="col-md-6">@Localizer["RealProgress"]: <strong class="txt-blue">@Model.ProjectMilestone.progress.ToString("P")</strong></div>
                                <div class="col-md-6">@Localizer["Responsible"]: <span><a class="underline-link" href="#" onclick="getParticipantInfoModal('@Model.ProjectMilestone.owner_id'); return false;">@Model.ProjectMilestone.owner_name</a></span> </div>
                                <div class="col-md-6">@Localizer["PlannedProgress"]: <strong class="txt-blue">@Model.ProjectMilestone.PlannedProgress.ToString("P")</strong></div>
                                <div class="col-md-6">@Localizer["RealEndDate"]: <strong class="txt-blue">@real_endate</strong></div>
                                <div class="col-md-12">
                                    <span id="LastCommentLabel">@Localizer["Comment"]:  </span> <br>
                                    <span class="pl-3 txt-blue" id="LastAnnotationHolder"></span>
                                    <br>
                                    <div class="row text-right">
                                        <div class="col-md-12 text-right">
                                            @if (Model.ProjectEditable && ViewBag.Role != null && ViewBag.Role != 2 && ViewBag.Role != 1)
                                            {
                                                <a href="#" onclick="setAnnotationEntry('@Model.ProjectID','@Model.ProjectTaskID', 2); return false;" class="btn btn-round btn-sm"><i class="fas fa-plus-circle"></i> @Localizer["Comment"] </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-4">
                        <div class="accordions" id="accordion">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        <a data-target="#collapseOne" href="#" data-toggle="collapse" aria-expanded="false">
                                            <i class="fas fa-user-tie"></i> @Localizer["Involved"]
                                            <b class="caret"></b>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseOne" class="card-collapse collapse" style="">
                                    <div class="card-body">
                                        <div class="row justify-content-md-center">
                                            <div class="col-md-6  text-center lbl-responsable">
                                                @Localizer["Responsible"]
                                            </div>
                                        </div>
                                        <div class="row pt-1 bg-gray">
                                            <div class="col-md-6  text-left">
                                                @Localizer["Name"]: <span class="txt-blue" id="ResponsibleName"></span><br>
                                                @Localizer["Escalation"]: <span class="txt-blue"><a id="EscalationName" class="underline-link" href="#"></a></span>
                                            </div>
                                            <div class="col-md-6  text-left">
                                                @Localizer["Phone"]: <span class="txt-blue"><a class="underline-link" href="#" id="ResponsiblePhone"></a></span><br>
                                                @Localizer["Email"]: <span class="txt-blue"><a class="underline-link" href="#" id="ResponsibleEmail"></a></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        <a data-target="#collapseTwo" href="#" data-toggle="collapse">
                                            <i class="fas fa-book-open"></i> @Localizer["Comments"] <span id="BadgeAnnotation" class="badge badge-secondary">0</span>
                                            <b class="caret"></b>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseTwo" class="card-collapse collapse">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="bd-comment">
                                                    <ul class="list-unstyled" id="AnnotationHolder"></ul>
                                                    <div class="col-md-12 text-right">
                                                        <a href="#" onclick="getAnnotations('@Model.ProjectID','@Model.ProjectTaskID', 2); return false;" class="btn btn-round btn-sm" id="seeMoreAnnotations"><i class="fas fa-book-open"></i> @Localizer["SeeMore"]</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        <a data-target="#collapseThree2" href="#" data-toggle="collapse">
                                            <i class="fas fa-handshake"></i> @Localizer["Agreement"] <span id="BadgeAgreement" class="badge badge-secondary">0</span>
                                            <b class="caret"></b>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseThree2" class="card-collapse">
                                    <div class="card-body">
                                        <div class="col-md-12">
                                            <table id="datatableAgreement" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>@Localizer["Agreement"]</th>
                                                        <th>@Localizer["AgreementDate"]</th>
                                                        <th>@Localizer["Responsible"]</th>
                                                        <th>@Localizer["Status"]</th>
                                                        <th>@Localizer["Comments"]</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModalAnnotation" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card horizontal-form" style="border:none;">
                    <div class="card-header ">
                        <h5 class="card-title">@Localizer["New"] &nbsp; @Localizer["Comment"]</h5>
                    </div>
                    <div class="card-body ">
                        <form id="frmMainAnnotation" method="post">
                            <div class="form-group">
                                <label>@Localizer["Comment"]</label><star class="star">*</star>
                                @Html.TextArea("Annotation", "", new { @class = "form-control", @maxlength = 1500, @required = "required" })
                            </div>
                            <div class="card-footer text-right">
                                <button type="button" class="btn btn-info btn-fill" data-dismiss="modal">@Localizer["Cancel"]</button>
                                <button type="button" id="btnCreateAnnotation" onclick="saveAnnotation(); return false;" class="btn btn-default btn-fill">@Localizer["Create"]</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/_DataTablesScriptsPartial.cshtml")

@section Scripts {
    <script type="text/javascript" src="~/js/core/vExecuteMilestone.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/plugins/jquery.mask.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/plugins/bootstrap-datetimepicker.js" asp-append-version="true"></script>

    @if (lng == null || lng == "es-MX")
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/locale/es.js"></script>
    }
}
