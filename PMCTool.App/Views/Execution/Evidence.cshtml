@model PMCTool.App.Models.ProjectEvidenceDetailViewModel

@{
    var lng = Context.Request.Cookies["pmctool-lang-app"];
}

<link rel="stylesheet" href="~/css/detalle-actividad.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/indicadores.css" asp-append-version="true" />

<link rel="stylesheet" href="~/css/select2/select2.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/select2/select2-bootstrap4.min.css" asp-append-version="true" />
<script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.js"></script>

@Html.Hidden("AreYouSureDelete", Localizer["AreYouSureDelete"].ToString())
@Html.Hidden("AreYouSureCancel", Localizer["AreYouSureCancel"].ToString())
@Html.Hidden("Cancel", Localizer["Cancel"].ToString())
@Html.Hidden("Accept", Localizer["Accept"].ToString())
@Html.Hidden("Yes", Localizer["Yes"].ToString())
@Html.Hidden("Edit", Localizer["Edit"].ToString())
@Html.Hidden("Delete", Localizer["Delete"].ToString())
@Html.Hidden("Upload", Localizer["Upload"].ToString())
@Html.Hidden("Download", Localizer["Download"].ToString())
@Html.Hidden("Reopen", Localizer["Reopen"].ToString())
@Html.Hidden("Update", Localizer["Update"].ToString())
@Html.Hidden("FileExtensionNotAllowed", Localizer["FileExtensionNotAllowed"].ToString())
@Html.Hidden("FileSizeNotAllowed", Localizer["FileSizeNotAllowed"].ToString())

@Html.Hidden("EnumProjectElementStatus_1", Localizer["EnumProjectElementStatus_1"].ToString())
@Html.Hidden("EnumProjectElementStatus_2", Localizer["EnumProjectElementStatus_2"].ToString())
@Html.Hidden("EnumProjectElementStatus_3", Localizer["EnumProjectElementStatus_3"].ToString())
@Html.Hidden("EnumProjectElementStatus_4", Localizer["EnumProjectElementStatus_4"].ToString())
@Html.Hidden("EnumProjectElementStatus_5", Localizer["EnumProjectElementStatus_5"].ToString())

@Html.Hidden("ResponsibleElaboration", Model.ProjectEvidence.ResponsibleElaboration)
@Html.Hidden("ResponsibleApproval", Model.ProjectEvidence.ResponsibleApproval)
@Html.Hidden("EvidenceStatus", Model.ProjectEvidence.Status)
@Html.Hidden("EvidenceProgress", Model.ProjectEvidence.Progress)
@Html.Hidden("DateApprovalPlanned")
@Html.Hidden("DateStartPlanned")
@Html.HiddenFor(m => m.ProjectID)
@Html.HiddenFor(m => m.ActivityID)
@Html.HiddenFor(m => m.ProjectEvidenceID)
@Html.HiddenFor(m => m.ProjectEditable)
@Html.HiddenFor(m => m.ParticipantRole)
@Html.HiddenFor(m => m.ReferenceEditable)

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-md-12 pt-2">
                            <div class="row">
                                <div class="col-md-10 pt-2">
                                    <small class="font-weight-normal bold">@Localizer["Project"]</small>
                                    <h4 class="media align-items-center font-weight-bold  mb-0 mt-0">
                                        <span class="txt-blue"> @Model.ProjectName.ToUpper()</span>
                                    </h4>
                                </div>
                                <div class="col-md-2 text-right">
                                    <a href="#" class="btn btn-sm btn-default btn-outline" onclick="window.history.back(); return false;"><i class="fas fa-long-arrow-alt-left"></i> @Localizer["Back"]</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 pt-2">
                            <div class="row">
                                <div class="col-md-8">
                                    <small class="font-weight-normal bold">@Localizer["Evidences"]</small>
                                    <h4 class="card-title txt-blue">@Model.ProjectEvidence.Description</h4>
                                    <p class="card-category">@Localizer["DetailedEvidenceReport"]</p>
                                </div>
                                @{
                                    if (Model.ProjectEditable)
                                    {
                                        <div class="col-md-4 text-right pt-3">
                                            <a href="#" onclick="setNotificationEntry('@Model.ProjectID','@Model.ProjectEvidenceID',3); return false;" class="btn btn-round btn-sm"><i class="far fa-bell"></i> @Localizer["Notify"] </a>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="row pt-4 pl-3">
                                <div class="col-md-6">
                                    <div class="row">@Localizer["DateApprovalPlanned"]: &nbsp; <strong id="EvidencePlannedEndDate" class="txt-blue">@Model.ProjectEvidence.PlannedEndDate.ToString("yyyy-MM-dd")</strong></div>
                                    <div class="row">@Localizer["DateApprovalReal"]: &nbsp; <strong class="txt-blue">@Model.ProjectEvidence.RealEndDate?.ToString("yyyy-MM-dd")</strong></div>
                                    <div class="row">@Localizer["ResponsibleElaboration"]: &nbsp; <span><a class="underline-link" href="#" onclick="getParticipantInfoModal('@Model.ProjectEvidence.ResponsibleElaboration'); return false;">&nbsp; @Model.ProjectEvidence.ResponsibleElaborationName</a></span> </div>
                                    <div class="row">@Localizer["ResponsibleApproval"]: &nbsp; <span><a class="underline-link" href="#" onclick="getParticipantInfoModal('@Model.ProjectEvidence.ResponsibleApproval'); return false;">&nbsp; @Model.ProjectEvidence.ResponsibleApprovalName</a></span> </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">@Localizer["Status"]: <span id="StatusIndicator" class="bold st-atrasado ws">&nbsp; @Localizer["EnumProjectElementStatus_" + Model.ProjectEvidence.Status.ToString()].ToString().ToUpper()</span></div>
                                    <div class="row">@Localizer["PercentageOfCompletion"]: &nbsp;<strong id="PercentageProgress" class="txt-blue">  @Model.ProjectEvidence.Progress.ToString("N2") %</strong></div>
                                </div>
                                <div class="col-md-12">
                                    @Localizer["Comment"]: <br>
                                    <span class="pl-3 txt-blue" id="LastAnnotationHolder"></span><br />
                                    <div class="col-md-12 text-right">
                                        @if (Model.ProjectEditable && (ViewBag.Role != null && ViewBag.Role != 2 && ViewBag.Role != 1))
                                        {
                                            <a href="#" onclick="setAnnotationEntry('@Model.ProjectID','@Model.ProjectEvidenceID',3); return false;" class="btn btn-round btn-sm"><i class="fas fa-plus-circle"></i> @Localizer["Comment"] </a>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-12 text-center">

                                    @{
                                        if (Model.ProjectEvidence.ProjectLayerID != null)
                                        {
                                            <strong class="txt-blue">@Localizer["LayerParent"]: @Model.ProjectEvidence.ProjectLayerParentName </strong> <br>
                                            <h5 class="card-title txt-blue">@Localizer["Layer"]: @Model.ProjectEvidence.ProjectLayerName </h5>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-4">
                        <div class="accordions" id="accordion">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        <a data-target="#collapseOne" href="#" data-toggle="collapse" aria-expanded="false">
                                            <i class="fas fa-user-tie"></i> @Localizer["Involved"]
                                            <b class="caret"></b>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseOne" class="card-collapse collapse" style="">
                                    <div class="card-body">
                                        <div class="row justify-content-md-center">
                                            <div class="col-md-6  text-center" style="background-color: #e9e9e9; font-weight: 500; color: black;">
                                                @Localizer["ResponsibleElaboration"]
                                            </div>
                                        </div>
                                        <div class="row pt-1" style="background-color: #f9f9f9;">
                                            <div class="col-md-6  text-left">
                                                @Localizer["Name"]: <span class="txt-blue" id="ResponsibleName"></span><br>
                                                @Localizer["Escalation"]: <span class="txt-blue"><a id="EscalationName" class="underline-link" href="#"></a></span>
                                            </div>
                                            <div class="col-md-6  text-left">
                                                @Localizer["Phone"]: <span class="txt-blue"><a class="underline-link" href="#" id="ResponsiblePhone"></a></span><br>
                                                @Localizer["Email"]: <span class="txt-blue"><a class="underline-link" href="#" id="ResponsibleEmail"></a></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row justify-content-md-center">
                                            <div class="col-md-6  text-center" style="background-color: #e9e9e9; font-weight: 500; color: black;">
                                                @Localizer["ResponsibleApproval"]
                                            </div>
                                        </div>
                                        <div class="row pt-1" style="background-color: #f9f9f9;">
                                            <div class="col-md-6  text-left">
                                                @Localizer["Name"]: <span class="txt-blue" id="ResponsibleApprovalName"></span><br>
                                                @Localizer["Escalation"]: <span class="txt-blue"><a id="ApprovalEscalationName" class="underline-link" href="#"></a></span>
                                            </div>
                                            <div class="col-md-6  text-left">
                                                @Localizer["Phone"]: <span class="txt-blue"><a class="underline-link" href="#" id="ResponsibleApprovalPhone"></a></span><br>
                                                @Localizer["Email"]: <span class="txt-blue"><a class="underline-link" href="#" id="ResponsibleApprovalEmail"></a></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        <a data-target="#collapseTwo" href="#" data-toggle="collapse">
                                            <i class="fas fa-book-open"></i> @Localizer["Comments"] <span id="BadgeAnnotation" class="badge badge-secondary">0</span>
                                            <b class="caret"></b>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseTwo" class="card-collapse collapse">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="bd-comment">
                                                    <ul class="list-unstyled" id="AnnotationHolder"></ul>
                                                    <div class="col-md-12 text-right">
                                                        <a href="#" onclick="getAnnotations('@Model.ProjectID','@Model.ProjectEvidenceID',3); return false;" class="btn btn-round btn-sm" id="seeMoreAnnotations"><i class="fas fa-book-open"></i> @Localizer["SeeMore"]</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        <a data-target="#collapseThree2" href="#" data-toggle="collapse">
                                            <i class="fas fa-info-circle"></i> @Localizer["LinkedActivity"] <span class="badge badge-secondary"></span>
                                            <b class="caret"></b>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseThree2" class="card-collapse">
                                    <div class="card-body">
                                        <div class="col-md-12">
                                            <div class="table-responsive">
                                                <table id="datatablesActivities" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                                    <thead>
                                                        <tr>
                                                            <th>@Localizer["WBS"]</th>
                                                            <th>@Localizer["Activity"]</th>
                                                            <th>@Localizer["PlannedStartDate"]</th>
                                                            <th>@Localizer["PlannedEndDate"]</th>
                                                            <th>@Localizer["RealEndDate"]</th>
                                                            <th>@Localizer["RealProgress"]</th>
                                                            <th>@Localizer["Status"]</th>
                                                            <th>@Localizer["Comment"]</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        <a data-target="#collapseThree4" href="#" data-toggle="collapse">
                                            <i class="fas fa-exclamation-circle"></i> @Localizer["Incidents"] <span id="BadgeIncident" class="badge badge-secondary">0</span>
                                            <b class="caret"></b>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseThree4" class="card-collapse">
                                    <div class="card-body">
                                        <div class="col-md-12">
                                            <table id="datatablesIncidents" class="table table-striped table-no-bordered table-hover dataTable dtr-inline nowrap justify-content-between" cellspacing="0" style="width: 100%;" role="grid" aria-describedby="datatablesI_info">
                                                <thead>
                                                    <tr role="row">
                                                        <th></th>
                                                        <th align="center">@Localizer["Description"]</th>
                                                        <th align="center">@Localizer["DateRegistry"]</th>
                                                        <th align="center">@Localizer["AgreementDate"]</th>
                                                        <th align="center">@Localizer["Status"]</th>
                                                        <th align="center">@Localizer["Comments"]</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        <a data-target="#collapseThree" href="#" data-toggle="collapse">
                                            <i class="fas fa-file-alt"></i> @Localizer["References"] <span id="BadgeReference" class="badge badge-secondary">0</span>
                                            <b class="caret"></b>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseThree" class="card-collapse">
                                    <div class="card-body">
                                        <div class="col-md-12 text-right">
                                            @if (Model.ProjectEditable && ViewBag.Role != null && ViewBag.Role != 2 && ViewBag.Role != 1)
                                            {
                                                <a href="#" id="newReferenceBtn" onclick="newReferenceEntry(); return false;" class="btn btn-round btn-sm" data-toggle="modal" data-target="#exampleModal"><i class="fas fa-plus-circle"></i> @Localizer["New"]</a>
                                            }
                                        </div>
                                        <div class="col-md-12">
                                            <table id="datatableReference" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th></th>
                                                        <th></th>
                                                        <th>@Localizer["Reference"]</th>
                                                        <th>@Localizer["LocationOrLink"]</th>
                                                        <th>@Localizer["Comment"]</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        <a data-target="#collapseThree1" href="#" data-toggle="collapse">
                                            <i class="fas fa-dot-circle"></i> @Localizer["ControlPoints"] <span id="BadgeControlPoint" class="badge badge-secondary">0</span>
                                            <b class="caret"></b>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseThree1" class="card-collapse">
                                    <div class="card-body">
                                        <div class="col-md-12 text-right">
                                            @{
                                                if (Model.ProjectEditable && ViewBag.Role == 5)
                                                {
                                                    <a href="#" class="btn btn-round btn-sm" onclick="newControlPointEntry(); return false;"><i class="fas fa-plus-circle"></i> @Localizer["New"]</a>
                                                }
                                                if (Model.ProjectEditable && ViewBag.Role == 4)
                                                {
                                                    if (Model.ProjectEvidence.ResponsibleApproval == ViewBag.ParticipantId || Model.ProjectEvidence.ResponsibleElaboration == ViewBag.ParticipantId)
                                                    {
                                                        <a href="#" class="btn btn-round btn-sm" onclick="newControlPointEntry(); return false;"><i class="fas fa-plus-circle"></i> @Localizer["New"]</a>
                                                    }
                                                }
                                            }
                                        </div>
                                        <div class="col-md-12">
                                            <table id="datatablesControlPoint" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>@Localizer["ControlPoint"]</th>
                                                        <th>@Localizer["PlannedEndDate"]</th>
                                                        <th>@Localizer["RealEndDate"]</th>
                                                        <th>@Localizer["PercentageOfCompletion"]</th>
                                                        <th>@Localizer["Weighing"]</th>
                                                        <th class="text-center">@Localizer["Status"]</th>
                                                        <th>@Localizer["Comment"]</th>
                                                        <th class="disabled-sorting "> </th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        <a data-target="#collapseThree3" href="#" data-toggle="collapse">
                                            <i class="fas fa-handshake"></i> @Localizer["Agreements"] <span id="BadgeAgreement" class="badge badge-secondary">0</span>
                                            <b class="caret"></b>
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseThree3" class="card-collapse">
                                    <div class="card-body">
                                        <div class="col-md-12">
                                            <table id="datatableAgreement" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>@Localizer["Agreement"]</th>
                                                        <th>@Localizer["AgreementDate"]</th>
                                                        <th>@Localizer["Responsible"]</th>
                                                        <th>@Localizer["Status"]</th>
                                                        <th>@Localizer["Comments"]</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModalControlPoint" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><strong class="txt-blue" id="card-title">@Localizer["ControlPoint"]</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pt-1">
                <div class="card horizontal-form" style="border:none;">
                    <div class="card-body ">
                        <form id="frmMainControlPoint" method="post">
                            @Html.HiddenFor(m => m.ProjectID)
                            @Html.HiddenFor(m => m.ProjectEvidenceID)
                            @Html.HiddenFor(m => m.ProjectEvidenceControlPointID)
                            <div class="form-group">
                                <label>@Localizer["Description"]</label><star class="star">*</star>
                                @Html.TextAreaFor(m => m.ProjectEvidenceControlPoint.Description, new { @id = "ControlPointDescription", @class = "form-control", @maxlength = 1500, @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>@Localizer["PlannedEndDate"]</label><star class="star">*</star>
                                @Html.TextBoxFor(m => m.ProjectEvidenceControlPoint.PlannedEndDate, new { @id = "ControlPointPlannedEndDate", @class = "form-control datepicker", @required = "required" })
                            </div>
                            <div id="dvStatus">
                                <div class="form-group mb-0">
                                    <label>@Localizer["Status"]</label> <span id="StatusIndicatorControlPoint" class="bold st-atrasado"></span>
                                </div>
                                <div id="dvStatusCheckControlPoint" class="form-group mb-0">
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            @Html.CheckBoxFor(m => m.ProjectEvidenceControlPoint.WithImpact, new { @id = "ControlPointWithImpact", @class = "form-check-input" })
                                            <span class="form-check-sign"></span>
                                            @Localizer["EnumProjectElementStatus_3"]
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>@Localizer["Progress"]</label><star class="star">*</star>
                                @Html.TextBoxFor(m => m.ProjectEvidenceControlPoint.Progress, new { @id = "ControlPointProgress", @class = "form-control", @maxlength = 20, @required = "required", @min = 0, @max = 100 })
                            </div>
                            @Html.HiddenFor(m => m.ProjectEvidenceControlPoint.Weight, new { @id = "ControlPointWeight", @class = "form-control", @maxlength = 20, @required = "required", @min = 0, @max = 100 })
                            @Html.HiddenFor(m => m.ProjectEvidenceControlPoint.ManualWeight, new { @id = "ControlPointManualWeight", @class = "form-check-input" })
                            <div class="form-group">
                                <label>@Localizer["Comments"]</label>
                                @Html.TextAreaFor(m => m.ProjectEvidenceControlPoint.Comments, new { @id = "ControlPointComments", @class = "form-control", @maxlength = 1500 })
                            </div>
                            <div class="card-footer text-right">
                                <button type="button" class="btn btn-info btn-fill" data-dismiss="modal">@Localizer["Cancel"]</button>
                                @{
                                    if (Model.ProjectEditable)
                                    {
                                        <button type="button" id="btnUpdateControlPoint" onclick="updateControlPointRecord('Execution'); return false;" class="btn btn-default btn-fill">@Localizer["Update"]</button>
                                        <button type="button" id="btnCreateControlPoint" onclick="createControlPointRecord('Execution'); return false;" class="btn btn-default btn-fill">@Localizer["Create"]</button>
                                    }

                                }

                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModalReference" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><strong class="txt-blue">@Localizer["Reference"]</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body pt-1">
                <form id="frmMainReference" method="post">
                    @Html.HiddenFor(m => m.ProjectID)
                    @Html.HiddenFor(m => m.ProjectEvidenceID)
                    @Html.HiddenFor(m => m.ProjectEvidenceReferenceID)

                    <div class="form-group  mb-1">
                        <label for="recipient-name" class="col-form-label">@Localizer["Reference"]:</label><star class="star">*</star>
                        @Html.TextAreaFor(m => m.ProjectEvidenceReference.Reference, new { @id = "Reference", @class = "form-control", @maxlength = 1500, @required = "required" })
                    </div>
                    <div class="form-group  mb-1">
                        <label for="recipient-name" class="col-form-label">@Localizer["LocationOrLink"]:</label>
                        @Html.TextBoxFor(m => m.ProjectEvidenceReference.Location, new { @id = "ReferenceLocation", @class = "form-control", @maxlength = 150 })
                    </div>
                    <div class="form-row">
                        <div id="dvStatusCheck" class="form-group mb-0">
                            <div class="form-check">
                                <label class="form-check-label">
                                    @Html.CheckBoxFor(m => m.ProjectEvidenceReference.IsLink, new { @id = "ReferenceIsLink", @class = "form-check-input" })
                                    <span class="form-check-sign"></span>
                                    @Localizer["IsLink"]
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-1">
                        <label for="message-text" class="col-form-label">@Localizer["Comment"]:</label>
                        @Html.TextAreaFor(m => m.ProjectEvidenceReference.Comment, new { @id = "ReferenceComment", @class = "form-control", @maxlength = 150 })
                    </div>
                    <div class="form-group text-right">
                        <button type="button" class="btn btn-info" data-dismiss="modal">@Localizer["Close"]</button>
                        @{
                            if (Model.ProjectEditable)
                            {
                                <button type="button" id="btnUpdateReference" onclick="updateReferenceRecord('Execution'); return false;" class="btn btn-default">@Localizer["Update"]</button>
                                <button type="button" id="btnCreateReference" onclick="createReferenceRecord('Execution'); return false;" class="btn btn-default">@Localizer["Save"]</button>
                            }
                        }

                    </div>
                </form>
            </div>
            <div class="modal-footer ">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card horizontal-form" style="border:none;">
                    <div class="card-header ">
                        <h5 class="card-title"><span id="umCompanyName"></span></h5>
                    </div>
                    <div class="card-body ">
                        <form id="frmFile">
                            @Html.HiddenFor(m => m.ProjectID)
                            @Html.HiddenFor(m => m.ProjectEvidenceID)
                            @Html.HiddenFor(m => m.ProjectEvidenceReferenceID)

                            <div class="form-group text-center">
                                <img id="umEnvironmentImage" src="" style="max-width:200px;" />
                            </div>
                            <div class="form-group">
                                <label>@Localizer["File"]</label>
                                @Html.TextBoxFor(m => m.Image, new { @id = "Image", @class = "form-control", @style = "", type = "file", @required = "required", accept = "image/*,.pdf,.xlsx,.docx" })
                            </div>
                            <div class="card-footer text-right">
                                <button type="button" class="btn btn-info btn-fill" data-dismiss="modal">@Localizer["Cancel"]</button>
                                @{
                                    if (Model.ProjectEditable)
                                    {
                                        <button type="button" id="btnUpload" onclick="uploadFile(); return false;" class="btn btn-default btn-fill">@Localizer["Upload"]</button>
                                    }
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

