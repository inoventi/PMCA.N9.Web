@model PMCTool.Models.Environment.Company

@Html.Hidden("Err4016", string.Format(Localizer["4016"].ToString(), Localizer["Identifier"].ToString()))

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form id="frmMain" enctype="multipart/form-data">
                    @Html.HiddenFor(m => m.CompanyID)

                    <div class="card">
                        <div class="card-header ">
                            <div class="card-header">
                                @{
                                    if (ViewBag.Mode == "New")
                                    {
                                        <h4 class="card-title">@Localizer["New"] @Localizer["Company"]</h4>
                                    }
                                    else
                                    {
                                        <h4 class="card-title">@Localizer["Update"] @Localizer["Company"]</h4>
                                    }
                                }
                            </div>
                        </div>
                        <div class="card-body ">
                            <div class="row justify-content-center">
                                <div class="col-md-4 px-2">
                                    <div class="form-group">
                                        <label>@Localizer["Code"]</label>
                                        @Html.TextBoxFor(m => m.Code, new { @id = "Code", @class = "form-control", @style = "" })
                                    </div>
                                </div>
                                <div class="col-md-8 px-2">
                                    <div class="form-group">
                                        <label>@Localizer["Name"]</label><star class="star">*</star>
                                        @Html.TextBoxFor(m => m.Name, new { @id = "Name", @class = "form-control", @style = "", @required = "required", @maxlength = 150 })
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-8 px-2">
                                    <div class="form-group ">
                                        <label>@Localizer["Street"]</label>
                                        @Html.TextBoxFor(m => m.Address.Street, new { @id = "Street", @class = "form-control", @style = "", @maxlength = 450 })
                                    </div>
                                </div>
                                <div class="col-md-2 px-2">
                                    <div class="form-group ">
                                        <label>@Localizer["ExtNum"]</label>
                                        @Html.TextBoxFor(m => m.Address.ExtNum, new { @id = "ExtNum", @class = "form-control", @style = "", @maxlength = 150 })
                                    </div>

                                </div>
                                <div class="col-md-2 px-2">
                                    <div class="form-group ">
                                        <label>@Localizer["IntNum"]</label>
                                        @Html.TextBoxFor(m => m.Address.IntNum, new { @id = "IntNum", @class = "form-control", @style = "", @maxlength = 150 })
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-10 px-2">
                                    <div class="form-group ">
                                        <label>@Localizer["District"]</label>
                                        @Html.TextBoxFor(m => m.Address.District, new { @id = "District", @class = "form-control", @style = "", @maxlength = 450 })
                                    </div>
                                </div>
                                <div class="col-md-2 px-2">
                                    <div class="form-group ">
                                        <label>@Localizer["ZipCode"]</label>
                                        @Html.TextBoxFor(m => m.Address.ZipCode, new { @id = "ZipCode", @class = "form-control", @style = "", @maxlength = 50 })
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-4 px-2">
                                    <div class="form-group ">
                                        <label>@Localizer["Country"]</label>
                                        @Html.DropDownListFor(m => m.Address.CountryID, new SelectList(ViewBag.Countries, "Key", "Value"), new { @id = "CountryID", @class = "form-control", @style = "" })
                                    </div>
                                </div>
                                <div class="col-md-4 px-2">
                                    <div class="form-group ">
                                        <label>@Localizer["State"]</label>
                                        @Html.DropDownListFor(m => m.Address.StateID, new SelectList(ViewBag.States, "Key", "Value"), new { @id = "StateID", @class = "form-control", @style = "" })
                                    </div>
                                </div>
                                <div class="col-md-4 px-2">
                                    <div class="form-group ">
                                        <label>@Localizer["City"]</label>
                                        @Html.DropDownListFor(m => m.Address.CityID, new SelectList(ViewBag.Cities, "Key", "Value"), new { @id = "CityID", @class = "form-control", @style = "" })
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-12 px-2">
                                    <div class="form-group">
                                        <label>@Localizer["Contact"]</label>
                                        @Html.TextBoxFor(m => m.Contact.Value, new { @id = "Contact", @class = "form-control", @style = "", @maxlength = 500 })
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-6 px-2">
                                    <div class="form-group">
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                @Html.CheckBoxFor(m => m.IsActive, new { @id = "IsActive", @class = "form-check-input" })
                                                <span class="form-check-sign"></span>
                                                @Localizer["Active"]
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 px-2">

                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <button type="button" id="btnCancel" onclick="cancelCompany(); return false;" class="btn btn-info btn-fill">@Localizer["Cancel"]</button>
                            @{
                                if (ViewBag.Mode == "Edit")
                                {
                                    <button type="button" id="btnUpdate" onclick="updateCompany(); return false;" class="btn btn-default btn-fill">@Localizer["Update"]</button>
                                }
                                if (ViewBag.Mode == "New")
                                {
                                    <button type="button" id="btnCreate" onclick="createCompany(); return false;" class="btn btn-default btn-fill">@Localizer["Create"]</button>
                                }
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/core/vCompanyEditor.js" asp-append-version="true"></script>
}